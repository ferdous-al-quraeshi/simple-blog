<h1>New Article Page</h1>

<%= form_with scope: :article, url: articles_path, local: true do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text, size: '75x20' %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>