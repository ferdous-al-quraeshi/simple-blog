<p id="notice"><%= notice %></p>

<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        <span class="email">
          <%= @user.email %>
        </span>
      </h1>
    </section>
  </aside>
</div>

<%= link_to 'Edit', edit_user_path(@user), :class=>"btn btn__edit" %> |
<%= link_to 'Back', users_path, :class=>"btn btn__back" %>
